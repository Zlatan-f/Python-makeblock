                                                                        else:
                                                                            pass


@event.start
def on_start1():
    global key, direction
    while True:
        if direction == 1:
            rocky.forward(key * 10, 2)
			

        else:
            if direction == 2:
                rocky.backward(key * 10, 1)

            else:
                if direction == 3:
                    rocky.drive(0, key * 5)
                    codey.display.show_image("00000038383838383838ba7c38100000")

                else:
                    if direction == 4:
                        rocky.drive(key * 5, 0)
                        codey.display.show_image("0000000010387cba3838383838380000")

                    else:
                        if direction == 7:
                            rocky.stop()
                            direction = 0
							
                        else:
                            pass
